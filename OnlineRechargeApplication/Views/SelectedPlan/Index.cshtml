@model IEnumerable<OnlineRechargeApplication.Models.SelectedPlanModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    .text-right {
        text-align: right;
    }
</style>
<div class="container">
    <h1 class="text-center">Customer Selected Plans</h1>
    <div class="text-right">
        <a asp-action="Create" class="btn btn-success"> <i class="fas fa-plus"></i></a>
        <a asp-action="AdminOps" asp-controller="Auth" class="btn btn-warning"> <i class="fas fa-cancel"></i> Back</a>
    </div>
</div>
<br />
<table class="table table-bordered table-striped table-sm">
    <thead class="table-primary">
        <tr>
            <th class="text-center">

                @Html.DisplayNameFor(model => model.PlanId)
            </th>
            <th class="text-center">

                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th class="text-center">Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SelectedPlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SelectedPlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SelectedPlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
