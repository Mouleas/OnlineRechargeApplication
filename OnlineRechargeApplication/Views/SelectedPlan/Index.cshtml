@model IEnumerable<OnlineRechargeApplication.Models.SelectedPlanModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="AdminOps" asp-controller="Auth" class="btn btn-warning"> <i class="fas fa-cancel"></i> Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SelectedPlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SelectedPlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SelectedPlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
