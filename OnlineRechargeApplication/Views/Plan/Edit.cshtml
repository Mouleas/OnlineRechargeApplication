@model OnlineRechargeApplication.Models.PlanModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Plan</h1>

<hr />
<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="form-group shadow-sm rounded border p-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanId" />
            <div class="form-group">
                <label asp-for="PlanName" class="control-label"></label>
                <input asp-for="PlanName" class="form-control" />
                <span asp-validation-for="PlanName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanPrice" class="control-label"></label>
                <input asp-for="PlanPrice" class="form-control" />
                <span asp-validation-for="PlanPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanValidity" class="control-label"></label>
                <input asp-for="PlanValidity" class="form-control" />
                <span asp-validation-for="PlanValidity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanDescription" class="control-label"></label>
                <input asp-for="PlanDescription" class="form-control" />
                <span asp-validation-for="PlanDescription" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>
        </form>
            </div>
        </div>
    </div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
